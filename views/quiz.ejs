<!-- views/quiz.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/_header') %>
  <title>Quiz Details</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>

</head>

<body>
    <h1>Quiz Details</h1>
    <h2>
        <%= quiz.title %>
    </h2>

    <h3>Questions:</h3>
    <form action="/quiz/<%= quiz.id %>" method="POST" id="quiz-form">
    <div class="quiz-attempt-form">
        <% questions.forEach((question, index) => { %>
            <div class="question-box">
                <p><strong>Question <%= index + 1 %>:</strong><%= question.question %></p>
                   <label><input type="radio" name="question<%= index + 1 %>_answer" value="A"><%= question.option_a %></label>
                   <label><input type="radio" name="question<%= index + 1 %>_answer" value="B"><%= question.option_b %></label>
                   <label><input type="radio" name="question<%= index + 1 %>_answer" value="C"><%= question.option_c %></label>
                   <label><input type="radio" name="question<%= index + 1 %>_answer" value="D"><%= question.option_d %></label>
            </div>
                    <% }); %>

    </div>
    <button type="submit" id="submit-btn">Submit</button>
  </form>
</body>

</html>
