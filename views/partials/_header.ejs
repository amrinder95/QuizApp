
<link href="https://fonts.googleapis.com/css2?family=Dangrek&display=swap" rel="stylesheet">

    
    <link rel="stylesheet" href="/styles/header.css" />
    <nav>
            <h1>QuizApp</h1>
            <a class="nav-item nav-link" href="/">Home</a>
            <% if (typeof username === 'undefined') { %>
                <a class="nav-item nav-link" href="/login">Login</a>
                <a class="nav-item nav-link" href="/register">Register</a>
            <% } else { %>
                <a class="nav-item nav-link" href="/create-quiz">Create a Quiz</a>
                <a class="nav-item nav-link" href="/users">Your Quizzes</a>
                <span class="user-info">Logged in: <%= username %></span>
                <form action="/logout" method="POST" class="logout-form">
                    <button type="submit" class="nav-item nav-link logout-button">Logout</button>
                </form>
            <% } %>
    </nav>

